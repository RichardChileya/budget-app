<h1> Dealings New Page</h1>

<div class="form">
  <h2> New Transaction</h2>

  <%= form_with model: @dealing, url: category_dealings_path(:category_id) do |f| %>
    <div class="form__control">
      <%=f.label :name%> <br>
      <%= f.text_field :name %>
    </div>

    <div class="form__control">
      <%= f.label :amount %> <br>
      <%= f.text_field :amount, step: :any %>
    </div>

    <div class="form__control">
      <%= f.label :category %>
      <%= select_tag :category, options_for_select(Category.all.map { | category| [category.name, category.id]}), {promt: 'Select Category', required: true} %>
    </div>

    <%= f.submit "Save", class: "link_btn"%>
  <% end %>
</div>