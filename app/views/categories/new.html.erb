<h1>Categories New Page</h1>

<div class="form__container">
<h2>New Category</h2>

<%= form_with model: @category, url: categories_path, method: :post, data: { turbo: false } do |f| %>
    <div class="form__control">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>

    <div class="form__control">
      <%= f.label :icon%><br />
      <%= f.text_field :icon %>
    </div>
    <div class="back">
    <%=link_to root_path, class: "back_home" do %>
      <span>Back</span>
    <% end %>
    </div>

    <%= f.submit "Save", class: "link_btn"%>
<% end %>
  </div>