<h1>Categories Show Page</h1>
<nav class="navbar">
  <li class="nav_head">
    <% link_to category_dealings_path(@category) do %>
      <i class="fa-solid fa-arrow-left"></i>
    <% end %>
      <h3>Transactions</h3>
    <i class="fa-solid fa-magnifying-glass"></i>
  </li>
  <%= render "shared/navbar" %>
</nav>

<%= render "shared/flash" %>
<div class="show-btn">
  <%= link_to "Back", root_path( @category), class: "back_btn"%>

  <%= link_to "Add", new_category_dealing_path( @category), class: "Add_btn"%>
</div>
<div class="deal_container">
  <%= render "shared/catalog_card", catalog: @category %>

  <hr/>

  <% if @category_dealings.empty?%>
    <h3 class="zero_content"> No Content Added </h3>
  <% else %>
  
    <% @category_dealings.each do |c| %>
  <li class="catalog_list">
    <div class="catolog_content">
      <div class="created_at">
        <p class="hour"><%= c.created_at.strftime("%h")%></p>
        <p class="day"><%= c.created_at.strftime("%d")%></p>
        <p class="year hour"><%= c.created_at.strftime("%y")%></p>
      </div>
      <div class="data">
        <%= c.name %>
        <p class="time">
          <span>
            <i class="fa-solid fa-stopwatch-20"></i>
            <%= c.created_at.strftime("%T")%>
          </span>
          <span><%= c.created_at.strftime("%p")%></span> <br>
        </p>
          <span>Amount: <%= c.amount %></span>
      </div>
    </div>

    
  </li>  

  <% end %>
  <p class="total">Total Payment: $<%= @total.floor(2) %></p>
  <% end%>
  <%= link_to "New Transaction", new_category_dealing_path( @category), class: "link_btn"%>

</div>